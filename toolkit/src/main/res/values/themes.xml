<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Toolkit.Theme.MesaNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolkit_stratos</item>
        <item name="colorPrimaryVariant">@color/toolkit_purple_700</item>
        <item name="colorOnPrimary">@color/toolkit_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/toolkit_teal_200</item>
        <item name="colorSecondaryVariant">@color/toolkit_teal_700</item>
        <item name="colorOnSecondary">@color/toolkit_black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/toolkit_stratos</item>
    </style>

    <!-- region buttons -->
    <style name="Toolkit.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/toolkit_dimen54</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Toolkit.Text.Roboto.Medium.14sp</item>
    </style>

    <style name="Toolkit.Button.Stratos" parent="Toolkit.Button">
        <item name="android:textColor">@color/toolkit_white</item>
        <item name="android:background">@drawable/toolkit_white_ripple_white_stratos_background</item>
    </style>

    <style name="Toolkit.Button.Stratos.WhiteOutlined" parent="Toolkit.Button">
        <item name="android:textColor">@color/toolkit_white</item>
        <item name="android:background">@drawable/toolkit_white_ripple_white_border</item>
    </style>

    <style name="Toolkit.Button.Stratos.StratosOutlined" parent="Toolkit.Button">
        <item name="android:textColor">@color/toolkit_stratos</item>
        <item name="android:background">@drawable/toolkit_white_ripple_stratos_border</item>
    </style>

    <style name="Toolkit.Button.White.TextButton" parent="Toolkit.Button">
        <item name="android:textColor">@color/toolkit_white</item>
        <item name="android:background">@drawable/toolkit_white_ripple_stratos_border</item>
    </style>

    <style name="Toolkit.Button.Stratos.TextButton" parent="Toolkit.Button">
        <item name="android:textColor">@color/toolkit_stratos</item>
        <item name="android:background">@drawable/toolkit_stratos_ripple_white_border</item>
    </style>
    <!-- endregion buttons -->

    <!-- region ImageView -->
    <style name="Toolkit.ImageView.RoundedCorner.12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/toolkit_dimen12</item>
    </style>
    <!-- endregion ImageView -->

</resources>